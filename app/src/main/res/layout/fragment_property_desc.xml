<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddPropFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!-- , ,Playground,Garden,Gym, TV/fridge/Washing Macine,Water Purifier,WIFI, Sofa, Table-->

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Available Amenities:"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"></View>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:textOn="Lift Service"
                android:textOff="Lift Service"

                 />
            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:textOn="Parking"
                android:textOff="Parking"
                android:text="ToggleButton" />
            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:textOn="CCTV Security"
                android:textOff="CCTV Security"
                android:text="ToggleButton" />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:textOn="Power Backup"
                android:textOff="Power Backup"
                android:layout_height="wrap_content"
                android:text="ToggleButton" />
            <ToggleButton
                android:id="@+id/toggleButton5"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:textOn="Playground"
                android:textOff="Playground"
                android:layout_height="wrap_content"
                android:text="ToggleButton" />
            <ToggleButton
                android:id="@+id/toggleButton6"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:textOn="Swimming Pool"
                android:textOff="Swimming Pool"
                android:layout_height="wrap_content"
                android:text="ToggleButton" />


        </GridLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"></View>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"></Space>



        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:hint="Enter Short Description of Property"
            android:gravity="start"
            android:inputType="textMultiLine" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Tag your location on map:"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photos"/>


    </LinearLayout>




</ScrollView>